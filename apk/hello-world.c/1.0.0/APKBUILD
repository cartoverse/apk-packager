sha256sums="2be7809751a8eb41e382540fed321573b09357f827fd547201d66e8150195150  hello-world.c-1.0.0.tar.gz"
sha512sums="903b21448927c82e8e581c5eba5a9ff9bb01a26a329ba8076e836b75bb9086339463a5ab7f38a1fe63539eb77d121bd68b594c35dadad9b1f71c0c1be5b73b8f  hello-world.c-1.0.0.tar.gz"
