pkgname="hello-world.c"
pkgver=1.0.0
pkgrel=0
pkgdesc="Prints \"Hello World\""
url="https://github.com/orangemug/hello-world.c"
arch="all"
license="MIT"
depends=""
depends_dev=""
makedepends="$depends_dev"
install=""
subpackages=""
source="$pkgname-$pkgver.tar.gz::https://github.com/orangemug/hello-world.c/archive/v${pkgver}.tar.gz"

_builddir="${srcdir}/${pkgname}-${pkgver}"

build() {
  cd "$_builddir"
  make
}

package() {
  cd "$_builddir"
  mkdir -p "$pkgdir"/bin
  make DESTDIR="$pkgdir" install
}

